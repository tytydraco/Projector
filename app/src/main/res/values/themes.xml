<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Projector" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?colorSurface</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">?colorSurface</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true</item>
    </style>

    <style name="Theme.Projector.ProjectorView" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>